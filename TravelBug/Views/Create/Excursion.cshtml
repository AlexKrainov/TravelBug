@model TravelBug.Models.TravelBugModel.Excursion

@{
    ViewBag.Title = "Create new tuer";
    this.Layout = "~/Views/Shared/_LayoutCastom.cshtml";
}

<style>
    /*.EditForm {
        background-color: #F5F5F5;
    }*/

    .inputText > input,
    .inputText > textarea,
    .inputText > select {
        border: 1px solid lightgray;
    }
</style>

<section id="two" class="wrapper style2 special">
    <div class="container">
        @using (Html.BeginForm("Excursion", "Create", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <header class="major">
                <h4>Excursion</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </header>
            <section class="profiles">
                <div class="row">
                    <div class="6u 12u$">
                        @Html.LabelFor(model => model.Title)
                        <div class="inputText">
                            @Html.EditorFor(model => model.Title)
                        </div>
                    </div>

                    <div class="6u 12u$">
                        @Html.LabelFor(model => model.Description)
                        <div class="inputText">
                            @Html.EditorFor(model => model.Description)
                        </div>
                    </div>
                    <div class="6u 12u$">
                        @Html.Action("Item", "DropDownListEdit", new { type = "Language", id = -1 })
                    </div>
                    <div class="6u 12u$">
                        @Html.Action("Item", "DropDownListEdit", new { type = "Cost", id = -1 })
                    </div>
                    <div class="6u 12u$">
                        @Html.Action("Item", "DropDownListEdit", new { type = "Time", id = -1 })
                    </div>
                </div>
            </section>
            <section id="AddImage">
                @Html.Partial("AddImagePartial")
            </section>

            <div class="">
                <input type="submit" value="Go to create" class="button" />
            </div>
        }

    </div>
</section>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
