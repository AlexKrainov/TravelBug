@model TravelBug.Models.TravelBugModel.Excursion

@{
    ViewBag.Title = "View";
    this.Layout = "~/Views/Shared/_LayoutCastom.cshtml";
}
<style>
    #custom_banner {
        /*background-image: url(../images/dark_tint.png), url(../images/bokeh_car_lights_bg.jpg);*/
        background-position: center center;
        background-size: cover;
        color: #ffffff;
        padding: 14em 0em 14em;
        text-align: center;
    }
</style>
<!-- Banner -->
<section id="custom_banner" style="background-image: url( ../../Content/Style/images/dark_tint.png),
          url(@Url.Action("GetUrlFromPictureOfExcursion", "ShowImage", new { excursionID = @Model.Id }));">
    <h2>Hi. This is Transit.</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
    <ul class="actions">
        <li>
            <a href="#" class="button big">Заказать</a>
        </li>
    </ul>
</section>
<!-- One -->
<section id="one" class="wrapper style1 special">
    <div class="container">

        <div class="row 150%">
            <div class="4u 12u$(medium)">
                <section class="box">
                    <img style="width: 17%;" src="~/Content/images/New images/time.png" alt="">
                    <h4>@Model.Time</h4>
                </section>
            </div>
            <div class="4u 12u$(medium)">
                <section class="box">
                    <img style="width: 17%;" src="~/Content/images/New images/money.png" alt="">
                    <h4>
                        @foreach (TravelBug.Models.TravelBugModel.Cost cost in Model.Cost)
            {
                            <span>@cost.Money</span>
                        }
                    </h4>
                </section>
            </div>
            <div class="4u$ 12u$(medium)">
                <section class="box">
                    @if (Model.Language.Any(x => x.Name_Language.Contains("Russian")))
            {
                        <img style="width: 25%;" src="~/Content/images/Flag/russian_federation.png" alt="Russian" />
                    }

                    @if (Model.Language.Any(x => x.Name_Language.Contains("English")))
            {
                        <img src="~/Content/images/Flag/united_kingdom_great_britain.png" alt="English" />
                    }

                    @if (Model.Language.Any(x => x.Name_Language.Contains("France")))
            {
                        <img src="~/Content/images/Flag/france.png" alt="France" />
                    }
                </section>
            </div>
        </div>
    </div>
</section>

